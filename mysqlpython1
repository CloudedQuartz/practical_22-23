import mysql.connector

mydb = mysql.connector.connect(host="localhost", user="root", passwd="ommudgal")
cursorObject = mydb.cursor()
cursorObject.execute("use mydb")


def addrecords():
    cursorObject.execute("USE mydb")
    sql = "INSERT INTO ITEM VALUES(%s,%s,%s)"
    x = input("Enter itemcode: ")
    y = input("Enter Itemname: ")
    z = float(input("Enter Price: "))
    val = (x, y, z)

    cursorObject.execute(sql, val)
    mydb.commit()


def showrec():
    Query = "select * from item"
    cursorObject.execute(Query)
    records = cursorObject.fetchall()
    for row in records:
        print(row)


def search():
    Q = "SELECT * FROM item WHERE Itemcode = %s"
    s = input("Enter the item code: ")
    val = (s,)
    cursorObject.execute(Q, val)
    f = cursorObject.fetchall()
    for rows in f:
        print(rows)
while True:
    l = input(""" A: Add a record
    B: Show all records
    C: Search a record by itemcode
    """)
    if l.lower() == 'a':
        addrecords()
    elif l.lower() == 'b':
        showrec()
    elif l.lower() == 'c':
        search()
